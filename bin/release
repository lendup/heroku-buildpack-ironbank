#!/bin/sh

BUILD_DIR="$1"

if [ ! -f "$BUILD_DIR/Procfile" ]; then
    cat <<EOF
default_process_types:
    web: ./apache-maven/bin/mvn -e -X -P '!local' --settings ./assets/settings.xml -Dmaven.repo.local=./.m2_repository play:run -Dplay.httpPort=\$PORT -Dplay.id=\$PLAY_ID -Dplay.serverJvmArgs="\$JAVA_OPTS"
    worker: ./apache-maven/bin/mvn -e -X -P '!local' --settings ./assets/settings.xml -Dmaven.repo.local=./.m2_repository play:run -Dplay.httpPort=\$PORT -Dplay.id=\$PLAY_ID -Dplay.serverJvmArgs="\$JAVA_OPTS"
EOF
fi
